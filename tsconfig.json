{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015","esnext"],
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "./dist",
    "alwaysStrict": true,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
